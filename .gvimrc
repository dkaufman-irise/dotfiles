" gvimrc
" $Id$
color sorcerer
"set guifont=Menlo\ 12
set guifont=Anonymice\ Powerline:h18
set autoindent
let perl_fold=1
" window size
set lines=60 columns=120
" strip unnecessary crud from the gvim window
set guioptions-=T
set guioptions+=g
set guioptions+=i
set guioptions-=r
set guioptions-=m

" macvim only
set fullscreen
